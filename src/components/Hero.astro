<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box; 
  }
	.hero {
    position: relative;
    width: 100%;
    height: 100vh;
		color: aliceblue;
		text-shadow: 1px 1px 3px rgba(0,0,0,0.35);
    z-index: 1;
	}
  .my-slides {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: none;
  }
  .my-slides img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .dots-container {
    position: absolute;
    top: 95%;
    left: 50%;
    transform: translateX(-50%);
  }
  /* .number-text {
    position: absolute;
    top: 0;
    font-size: 1.2rem;
    padding: 8px 12px;
  } */
  .dot {
    height: 15px;
    width: 15px;
    margin: 0 2px;
    background-color: #bbb;
    border-radius: 50%;
    display: inline-block;
    transition: background-color 0.6s ease;
  }
  .active {
    background-color: #717171;
  }
  .fade {
    animation-name: fade;
    animation-duration: 3s;
  }
  @keyframes fade {
    from{opacity: 0.4}
    to {opacity: 1}
  }
	.hero-info {
    position: absolute;
    top: 50%;
		width: 100%;
    padding: 12%;
		/* padding-block: 50px 50px;
    padding-inline-end: 100px; */
		background: linear-gradient(to right, rgba(0,0,0,0.35), transparent);
	}
	.hero-info h1 {
		font-size: 6rem;
		line-height: 62px;
	}
  .hero-info h2 {
    font-size: 4.6rem;
  }
	.hero-info p {
		font-size: 3rem;
	}
  .whatsapp-button {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    padding: 15px 20px;
    position: absolute;
    top: 85%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
    display: none;
    width: 225px;
    border: none;
    border-radius: 12px;
    font-size: 1.8rem;
    font-weight: bold;
    letter-spacing: 1px;
    color: white;
    background-color: chocolate;
    box-shadow: 1px 1px 4px 1px rgba(0,0,0,0.20);
    cursor: pointer;
    transition: background-color 350ms;
  }
  .whatsapp-logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;

  }
  .whatsapp-logo-container img {
    width: 100%;
  }
  .scroll {
    position: fixed;
    top: 0;
    width: 100%;
    max-width: none;
    border-radius: 0px;
  }
  @media (hover: hover) {
    .whatsapp-button:hover {
      background-color: lch(from chocolate calc(l + 10) c h);
    }
  }
  @media (min-width: 2024px) {
    .hero-info {
      padding-inline-start: 8%;
    }
  }
  @media (min-width: 1921px) {
    .hero-info {
      padding-inline-start: 7%;
      transform: translateY(0%);
    }
  }
  @media (max-width: 1920px) {
    .hero-info {
      /* padding-inline-start: 6%; */
      transform: translateY(-10%);
    }
  }
  @media (max-width: 1440px) {
    .hero-info {
      width: 75%;
      transform: translateY(-35%);
    }
  }
  @media (max-width: 1280px) {
    .hero-info {
      width: 85%;
      transform: translateY(-38%);
    }
  }
  @media (max-width: 1024px) {
    .hero-info {
      width: 100%;
      transform: translateY(-50%);
    }
    .hero-info h1 {
		  font-size: 4.8rem;
		  line-height: 50px;
    }
    .hero-info h2 {
      font-size: 3.6rem;
    }
    .hero-info p {
      font-size: 1.8rem;
    }
    .whatsapp-button {
      display: flex;
    }
  }
  @media (max-width: 768px) {
    .hero-info {
    transform: translateY(-58%);
    }
    .hero-info h1 {
      font-size: 3.5rem;
    }
    .hero-info h2 {
      font-size: 3rem;
    }
    .hero-info p {
      font-size: 1.6rem;
    }
  }
  @media (max-width: 600px) {
    .hero-info {
      transform: translateY(-55%);
    }
  }
  @media (max-width: 480px) {
    .hero-info {
      transform: translateY(-55%);
    }
  }
</style>

