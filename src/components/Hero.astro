    let i;
let slides = document.getElementsByClassName('my-slides');
let dots = document.getElementsByClassName('dot');
if (slides.length > 0 && dots.length > 0) { // check if any elements exist to show.
    for(i = 0; i < slides.length; i++){
        (slides[i] as HTMLElement).style.display = "none";
    }
    slideIndex++;
    if (slideIndex > slides.length) {slideIndex = 1};
    for (i = 0; i < dots.length; i++) { // fixed for loop to include the length of the dots array.
        (dots[i] as HTMLElement).className = (dots[i] as HTMLElement).className.replace(" active", "");
    }
    (slides[slideIndex - 1] as HTMLElement).style.display = "block";
    dots[slideIndex - 1].className += " active";
}
setTimeout(showSlides, 5000);
  };
</script>